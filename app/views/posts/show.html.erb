<div id="post_content">
  <h1 class="tittle">
    <%= @post.tittle %>
  </h1>

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> ago
    <% if user_signed_in? %>    
      |<%= link_to "Edit", edit_post_path(@post) %> |      
      <%= button_to 'Delete', post_path(@post.id), :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
  </p>

  <p class="body">
    <%= @post.body %>
  </p>

  <div id="comments">
    <h2><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %>
    <h3> Join Discussion: </h3>
    <%= render "comments/form" %>
  </div>
</div>
